@page "/inrequests/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit</h3>

<FormComponent ButtonText="Update" OnValidSubmit="EditRequest" request="request" />

@code {
    [Parameter] public int id { get; set; }
    Request request = new Request();

    protected async override Task OnParametersSetAsync()
    {
        request = await
        _client.GetFromJsonAsync<Request>($"{Endpoints.RequestsEndpoint}/{id}");
    }

    async Task EditRequest()
    {
        await _client.PutAsJsonAsync($"{Endpoints.RequestsEndpoint}/{id}", request);
        _navManager.NavigateTo("/inrequests/");
    }
}
