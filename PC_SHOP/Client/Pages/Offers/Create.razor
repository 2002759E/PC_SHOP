@page "/offers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager


<h3 class="card-title">Create New Offers</h3>
<hr />
<br />
<FormComponent ButtonText="Create Offer" offer="offer"OnValidSubmit="@CreateOffer" />



@code {
    Offer offer = new Offer();

    private async Task CreateOffer()
    {
        await _client.PostAsJsonAsync(Endpoints.OffersEndpoint, offer);
        _navManager.NavigateTo("/offers/");
    }
}